CC = gcc
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c file1.c file2.c
OBJ = $(SRC:.c=.o)
RM = rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

%.o: %.c m.h
	$(CC) $(CFLAGS) -c -o $@ $<l
